---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | Chuck Copeland">
    <div class="error-container container">
        <h1 class="text-accent">404</h1>
        <h2>Page Not Found</h2>
        <p class="text-muted">The page you are looking for has been moved or deleted.</p>

        <div class="actions">
            <a href="/" class="btn-primary">Back to Home</a>
            <a href="/work" class="link-secondary">View Work &rarr;</a>
        </div>
    </div>
</Layout>

<style>
    .error-container {
        height: 80vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    h1 {
        font-size: 8rem;
        /* Special massive size just for 404 */
        line-height: 1;
        margin-bottom: 0;
        opacity: 0.8;
    }

    .actions {
        display: flex;
        gap: 2rem;
        align-items: center;
        margin-top: 2rem;
    }

    .link-secondary {
        color: var(--text-main);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .link-secondary:hover {
        color: var(--accent);
    }
</style>