---
// src/pages/video/[id].astro
import Layout from '../../layouts/Layout.astro';
import projects from '../../data/videos.json';

// 1. Tell Astro to generate a page for every ID found in video.json
export function getStaticPaths() {
return projects.map(project => ({
params: { id: project.id },
props: { project },
}));
}

// 2. Get the data for the current page
const { project } = Astro.props;

// Helper to determine if it's a YouTube embed or local file
const isYoutube = project.videoUrl.includes('youtube');
---

<Layout title={`${project.title} | Chuck Copeland`}>

    <div class="case-study container">

        <a href="/videos" class="back-link">&larr; Back to Videos</a>

        <div class="video-wrapper">
            {isYoutube ? (
            <iframe src={project.videoUrl} title={project.title} frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
            </iframe>
            ) : (
            <video controls poster={`/${project.thumbnail}`}>
                <source src={project.videoUrl} type="video/mp4" />
                Your browser does not support the video tag.
            </video>
            )}
        </div>

        <div class="project-details">
            <div class="info-header">
                <h1>{project.title}</h1>
                <div class="tags">
                    <span class="badge">{project.category}</span>
                    <span class="date text-muted">{project.date}</span>
                </div>
            </div>

            <div class="info-grid">
                <div class="main-desc">
                    <h3>About the Project</h3>
                    <p>{project.description}</p>
                </div>
                <div class="sidebar">
                    <div class="meta-item">
                        <h4>Client</h4>
                        <p>{project.client}</p>
                    </div>
                </div>
            </div>
        </div>

    </div>

</Layout>

<style>
    .case-study {
        padding-top: 8rem;
        padding-bottom: 4rem;
        max-width: 1000px;
        /* Constrain reading width specifically for this page */
    }

    .back-link,
    .date {
        font-family: var(--font-heading););
        display: inline-block;
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .back-link:hover {
        color: var(--accent);
    }

    /* Video Player - 16:9 Aspect Ratio Lock */
    .video-wrapper {
        position: relative;
        padding-bottom: 56.25%;
        /* 16:9 */
        height: 0;
        background: #000;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 1rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .video-wrapper iframe,
    .video-wrapper video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    /* Details Layout */
    .info-header {
        border-bottom: 1px solid #222;
        padding-bottom: 1rem;
        margin-bottom: 1rem;
    
    }

    .info-header h1 {
        color: var(--accent);
        font-size: clamp(1.8rem, 2.5vw + 1rem, 4rem);
        weight: 800;
    }

    .badge {
        background: #222;
        padding: 0.3rem 0.8rem;
        border-radius: 4px;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--accent);
        margin-right: 1rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
    }

    @media (min-width: 768px) {
        .info-grid {
            grid-template-columns: 2fr 1fr;
        }
    }

    .main-desc h3 {
        font-size: clamp(1.2rem, 2vw + 1rem, 2rem);
        margin-bottom: 1rem;
    }

    .main-desc p {
        font-size: clamp(0.8rem, 1.5vw + 0.5rem, 1rem);
        color: #ccc;
    }

    .meta-item h4 {
        font-size: 0.9rem;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .meta-item p {
        font-size: clamp(0.8rem, 1.5vw + 0.5rem, 1rem);
    }
</style>