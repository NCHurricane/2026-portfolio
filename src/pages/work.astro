---
// src/pages/work.astro
import Layout from '../layouts/Layout.astro';
import projects from '../data/projects.json';

// Sort projects by date (newest first)
const sortedProjects = projects.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<Layout title="Work | Chuck Copeland">
    
    <section class="page-header">
        <div class="container">
            <h1>Selected Work</h1>
            <p class="text-muted">A collection of motion graphics, video editing, and drone photography.</p>
        </div>
    </section>

    <section class="gallery-section">
        <div class="container">
            <div class="projects-grid">
                {sortedProjects.map((project) => (
                    <a href={`/work/${project.id}`} class="project-card">
                        <div class="card-image">
                            <img src={`/${project.thumbnail}`} alt={project.title} loading="lazy" />
                            <div class="overlay">
                                <span class="view-project">View Case Study</span>
                            </div>
                        </div>
                        <div class="card-info">
                            <h3>{project.title}</h3>
                            <div class="meta">
                                <span class="category text-accent">{project.category}</span>
                                <span class="separator">&bull;</span>
                                <span class="client text-muted">{project.client}</span>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </section>

</Layout>

<style>
    .page-header {
        padding: 8rem 0 4rem;
        background: linear-gradient(to bottom, #111, var(--bg-main));
        border-bottom: 1px solid #222;
    }

    .page-header h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        padding: 4rem 0;
    }

    .project-card {
        background: var(--bg-card);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .project-card:hover {
        transform: translateY(-8px);
    }

    .card-image {
        position: relative;
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .project-card:hover .card-image img {
        transform: scale(1.05);
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .project-card:hover .overlay {
        opacity: 1;
    }

    .view-project {
        border: 1px solid var(--accent);
        color: var(--accent);
        padding: 0.5rem 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-family: var(--font-heading);
        font-size: 0.9rem;
    }

    .card-info {
        padding: 1.5rem;
        border-top: 1px solid #222;
    }

    .card-info h3 {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        color: var(--text-main);
    }

    .meta {
        font-size: 0.85rem;
        font-family: var(--font-body);
    }

    .separator { margin: 0 0.5rem; color: #444; }
</style>