---
// src/components/Footer.astro
const today = new Date();
---

<footer class="site-footer">
    <div class="container footer-content">
        <div class="social-links">
            <a href="https://www.linkedin.com/in/chuckcopeland" target="_blank" aria-label="LinkedIn">
                <i class="fab fa-linkedin"></i>
            </a>
            <a href="https://bsky.app/profile/@chuckcopeland.com" target="_blank" aria-label="Bluesky">
                <i class="fab fa-bluesky"></i>
            </a>
            <a href="https://www.youtube.com/@chuckcopeland" target="_blank" aria-label="YouTube">
                <i class="fab fa-youtube"></i>
            </a>
            <a href="https://www.instagram.com/chuck_copeland/" target="_blank" aria-label="Instagram">
                <i class="fab fa-instagram"></i>
            </a>
            <a href="https://www.tiktok.com/@chuck_copeland" target="_blank" aria-label="TikTok">
                <i class="fab fa-tiktok"></i>
            </a>
            <a href="https://www.threads.net/@chuck_copeland" target="_blank" aria-label="Threads">
                <i class="fab fa-threads"></i>
            </a>
            <a href="https://www.facebook.com/chuckcopelandcom/" target="_blank" aria-label="Facebook">
                <i class="fab fa-facebook"></i>
            </a>
            <a href="https://mastodon.social/@chuckcopeland" target="_blank" aria-label="Mastodon">
                <i class="fab fa-mastodon"></i>
            </a>
            <a href="https://x.com/chuckcopelandwx" target="_blank" aria-label="X">
                <i class="fab fa-x-twitter"></i>
            </a>
        </div>
        <p class="copyright text-muted">
            &copy; 2019, {today.getFullYear()} Chuck Copeland. All Rights Reserved.<br />
            Created by me with <a href="https://astro.build/" target="_blank">Astro</a> in VS Code and an assist
            from&nbsp; <i class="fa-solid fa-mug-hot fa-lg" aria-hidden="true"></i>
        </p>
    </div>
</footer>

<style>
    .site-footer {
        border-top: 1px solid #222;
        padding: 4rem 0;
        margin-top: 4rem;
        background: var(--bg-card);
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .social-links {
        display: flex;
        gap: 2rem;
    }

    .social-links a {
        color: var(--text-muted);
        font-size: 1.5rem;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    .social-links a:hover {
        color: var(--accent);
        transform: translateY(-3px) scale(1.5);
    }

    .copyright {
        font-family: var(--font-heading);
        font-size: clamp(0.8rem, 2vw, 1rem);
        text-align: center;
    }

    @media (max-width: 768px) {
        .social-links {
            gap: 0.8rem;
        }
    }
</style>