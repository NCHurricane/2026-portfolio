---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import brands from '../data/brands.json';
import { slidePanUpIntense, slidePanDownIntense, slidePanRight, fadeTransition, zoomSubtle } from '../scripts/transitions.js';
import { z } from 'astro:content';


const skills = [
{
icon: "fa-solid fa-film",
title: "Video & Motion",
desc: "Davinci Resolve Studio & After Effects. From short-form social content to long-form corporate storytelling."
},
{
icon: "fa-solid fa-camera",
title: "Photography",
desc: "Event photography, landscapes, and branding. Expert in Lightroom color grading and composition."
},
{
icon: "fa-solid fa-laptop-code",
title: "Web Development",
desc: "HTML5, CSS3, and Modern Frameworks. Building fast, responsive sites for small businesses."
}
];
---

<Layout title="About Chuck Copeland">

    <div class="about-page">

        <section class="bio-header container">
            <div class="bio-content">
                <h1 transition:name="hero-name">Just A <span class="text-accent">CatDad</span> <br />Who Creates</h1>
                <p transition:animate={slidePanRight} transition:name="subtitle" class="lead">Cats, Clouds, Cars, and Code.</p>
                <div transition:animate={slidePanUpIntense} class="bio-text">
                    <p>I’m Chuck Copeland, a digital creator who combines creative vision with the reliability of
                        a seasoned leader.
                    </p>
                    <p>
                        My
                        journey began in the early 2000s, flying the video-creation plane as I flew it while editing a
                        regionally distributed DVD for Big Daddy Outfitters. When I launched NCHurricane.com in 2003, I
                        used that project to develop my skills in HTML, CSS, JavaScript and other web development
                        languages.
                    </p>
                    <p>
                        With a 30-year background in corporate management, I bring a unique level of discipline and
                        problem-solving to every
                        creative project. Whether I’m designing a website or editing a YouTube short, I approach
                        the work with the same
                        precision I once used racing stock cars: fast, accurate, and focused. When I’m not in the edit
                        bay, I’m likely tracking
                        severe weather or spending time with my wife and my four cats, <span class="special-link"><a
                                href="https://nchurricats.com" target="_blank">The NCHurricats</a></span></p>
                </div>

                <div transition:animate={slidePanDownIntense} class="social-links"><a href="https://www.linkedin.com/in/chuckcopeland" target="_blank"
                        aria-label="LinkedIn">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="https://bsky.app/profile/@chuckcopeland.com" target="_blank" aria-label="Bluesky">
                        <i class="fab fa-bluesky"></i>
                    </a>
                    <a href="https://www.youtube.com/@chuckcopeland" target="_blank" aria-label="YouTube">
                        <i class="fab fa-youtube"></i>
                    </a>
                    <a href="https://www.instagram.com/chuck_copeland/" target="_blank" aria-label="Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="https://www.tiktok.com/@chuck_copeland" target="_blank" aria-label="TikTok">
                        <i class="fab fa-tiktok"></i>
                    </a>
                    <a href="https://www.threads.net/@chuck_copeland" target="_blank" aria-label="Threads">
                        <i class="fab fa-threads"></i>
                    </a>
                    <a href="https://www.facebook.com/chuckcopelandcom/" target="_blank" aria-label="Facebook">
                        <i class="fab fa-facebook"></i>
                    </a>
                    <a href="https://mastodon.social/@chuckcopeland" target="_blank" aria-label="Mastodon">
                        <i class="fab fa-mastodon"></i>
                    </a>
                    <a href="https://x.com/chuckcopelandwx" target="_blank" aria-label="X">
                        <i class="fab fa-x-twitter"></i>
                    </a>
                </div>
            </div>

            <div transition:animate={fadeTransition} class="bio-image">
                <img transition:animate={slidePanRight} src="/assets/img/about-photo.webp" alt="Chuck Copeland" loading="lazy" />
            </div>
        </section>

        <section class="skills-section reveal">
            <div class="container">
                <h2>Production & Development</h2>
                <div class="skills-grid">

                    <div class="skill-card skill-1">
                        <i class="fa-solid fa-film icon"></i>
                        <h3>Visual Creation</h3>
                        <p class="skill-info text-muted">My post-production workflow utilizes DaVinci Resolve Studio and the
                            full Adobe Creative Cloud for editing, motion graphics, and graphic design. Whether it's a
                            long-form project, quick social media
                            clip or a weekly email newsletter, I use the best tools to tell
                            the story.</p>
                    </div>

                    <div class="skill-card skill-2">
                        <i class="fa-solid fa-code icon"></i>
                        <h3>Web Architecture</h3>
                        <p class="skill-info text-muted">With over 20 years of experience in HTML & CSS and a deep history with
                            WordPress, I build responsive websites that are fast and accessible. I use VS Code and local
                            testing environments
                            to ensure every line of code works and every element is correct before it goes live.</p>
                    </div>

                    <div class="skill-card skill-3">
                        <i class="fa-solid fa-computer icon"></i>
                        <h3>The Engine Room</h3>
                        <p class="skill-info text-muted">Creativity shouldn't have to wait on a loading bar. I built a custom,
                            128GB RAM, 14900K, NVidia-powered workstation engineered for
                            zero-bottleneck rendering. This allows me to handle complex timelines and heavy
                            multitasking without technical
                            delays.</p>
                    </div>

                </div>
            </div>
        </section>

<section class="brands-section reveal">
    <div class="container">
    <div class="section-header">
        <h2>Brands I Manage</h2>
    </div>
    
    <div class="brands-grid">
        {brands.map((brand) => (
            <div 
                class="brand-card" 
                style={`background-image: url(${brand.bgImage});`}
            >
                <div class="brand-logo">
                    <img src={brand.img} alt={brand.name} loading="lazy" />
                </div>
                <div class="brand-info">
                    <span class="brand-role">{brand.role}</span>
                    <p>{brand.desc}</p>
                    
                    <div class="brand-links">
                        {brand.links.map((link) => (
                            <a href={link.url} target="_blank" aria-label={`Visit ${brand.name}`}>
                                <i class={link.icon}></i>
                            </a>
                        ))}
                    </div>
                </div>
            </div>
        ))}
    </div></div>
</section>

    </div>

</Layout>

<style>
    .about-page {
        padding-top: 8rem;
        cursor: default;
    }

    /* BIO SECTION */
    .bio-header {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
        align-items: center;
        margin-bottom: 8rem;
    }

    .bio-content h1 {
        font-weight: 800;
    }

    @media (min-width: 992px) {
        .bio-header {
            grid-template-columns: 1.2fr 0.8fr;
        }
    }

    .lead {
        font-size: 1.5rem;
        color: var(--text-muted);
        font-family: var(--font-heading);
        margin-bottom: 2rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .bio-text p {
        color: #ccc;
        margin-bottom: 1.5rem;
        max-width: 60ch;
    }

    @media (max-width: 600px) {
        .bio-text p {
            font-size: clamp(0.9rem, 2vw, 1rem);
        }
    }

    .bio-image img {
        width: 100%;
        max-width: 500px;
        height: auto;
        border-radius: 12px;
        filter: grayscale(100%);
        transition: filter 0.5s ease;
        box-shadow: 20px 20px 0 var(--bg-card);
    }

    .bio-image:hover img {
        filter: grayscale(0%);
    }

    .special-link a {
        color: var(--accent);
        text-decoration: none;
    }

    .special-link a:hover {
        text-decoration: underline;
    }

    /* SOCIAL LINKS */
    .social-links {
        display: flex;
        gap: 0.9rem;
        margin-top: 2rem;
    }

    .social-links a {
        font-size: clamp(1.2rem, 4vw, 2rem);
        color: var(--text-muted);
        transition: transform 0.2s ease, color 0.2s ease;
    }

    .social-links a:hover {
        color: var(--accent);
        transform: translateY(-3px) scale(1.5);
    }

    /* SKILLS */
    .skills-section {
        background: var(--bg-card);
        padding: 4rem 0;
    }

    .skills-section h2 {
        margin-bottom: 4rem;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .skill-card {
        background-color: var(--bg-main);
        border: 1px solid #222;
        border-radius: 12px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: transform 0.3s ease, border-color 0.3s ease;
    }

    .skill-1 {
		background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.9)), url('../assets/img/timeline.webp');
		background-size: cover;
		background-repeat: no-repeat;
	}

	.skill-2 {
		background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)), url('../assets/img/html.webp');
		background-size: cover;
		background-repeat: no-repeat;
	}

	.skill-3 {
		background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.9)), url('../assets/img/computer.webp');
		background-size: cover;
		background-repeat: no-repeat;
	}

    .skill-card:hover {
        transform: translateY(-5px);
        border-color: var(--accent);
    }

    .skill-card h3 {
        font-size: 1.4rem;
        margin-bottom: 0.2rem;
        color: var(--text-main);
    }

    .skill-info{
        font-size: 0.95rem;
        color: #ccc;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .icon {
        font-size: 3rem;
        color: var(--accent);
        margin-bottom: 1.5rem;
    }

/* BRANDS SECTION */
    .brands-section {
        padding: 4rem 0;
   		background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7)), url('../assets/img/portfolio-bg.png');
        background-size: cover;
        background-position: bottom;
        background-repeat: no-repeat;
    }

    @media (max-width: 600px) {
        .brands-section {
            background-image: none;
        }
    }

    .brands-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .brand-card {
        /* background-color: var(--bg-card); */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border: 1px solid #222;
        border-radius: 12px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: transform 0.3s ease, border-color 0.3s ease;
    }

    .brand-card:hover {
        transform: translateY(-5px);
        border-color: var(--accent);
    }

    .brand-logo img {
        height: 30px; /* Adjust based on your logo shapes */
        width: auto;
        margin-bottom: 1.5rem;
        object-fit: contain;
    }

    .brand-info h3 {
        font-size: 1.4rem;
        margin-bottom: 0.2rem;
        color: var(--text-main);
    }

    .brand-role {
        font-size: 0.85rem;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
        display: block;
        margin-bottom: 1rem;
    }

    .brand-info p {
        font-size: 0.95rem;
        color: #ccc;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .brand-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: auto; /* Pushes links to the bottom */
    }

    .brand-links a {
        color: var(--text-muted);
        font-size: 1.2rem;
        transition: color 0.2s ease, transform 0.2s ease;
    }

    .brand-links a:hover {
        color: var(--accent);
        transform: scale(1.2);
    }

    .section-header {
        border-bottom: 1px solid #222;
        padding-bottom: 1rem;
        margin-bottom: 3rem;
    }
</style>