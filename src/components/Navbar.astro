---
// src/components/Navbar.astro
---
<header class="navbar">
    <div class="container nav-content">
        <a href="/" class="logo">
            CHUCK<span class="text-accent">COPELAND</span>
        </a>

        <nav>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/work">Work</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="#" id="contact-btn" class="btn-primary"
                        style="padding: 0.5rem 1.5rem; font-size: 0.9rem;">Contact</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<script>
    // This runs on the client browser, not the server.
    // Bots reading the source code won't see the email address.
    const btn = document.getElementById('contact-btn');

    if (btn) {
        btn.addEventListener('click', (e) => {
            e.preventDefault(); // Stop the # link

            // Reconstruct the email parts
            const user = 'chuck';
            const domain = 'chuckcopeland.com';
            const subject = 'Project Inquiry'; // Pre-fill the subject line for them

            // Force the browser to open the mail client
            window.location.href = `mailto:${user}@${domain}?subject=${encodeURIComponent(subject)}`;
        });
    }
</script>

<style>
    .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        background: rgba(10, 10, 10, 0.85);
        /* Glass effect */
        backdrop-filter: blur(10px);
        z-index: 100;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .nav-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
    }

    .logo {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .nav-links {
        display: flex;
        gap: 2.5rem;
        list-style: none;
        align-items: center;
        margin: 0;
        padding: 0;
    }

    .nav-links a:not(.btn-primary) {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
    }

    .nav-links a:not(.btn-primary):hover {
        color: var(--accent);
        opacity: 1;
    }
</style>