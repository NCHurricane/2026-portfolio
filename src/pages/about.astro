---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';

// You can move these to a JSON file later if you want, but inline is fine for now
const skills = [
{
icon: "fa-solid fa-film",
title: "Video & Motion",
desc: "Davinci Resolve Studio & After Effects. From short-form social content to long-form corporate storytelling."
},
{
icon: "fa-solid fa-camera",
title: "Photography",
desc: "Event photography, landscapes, and branding. Expert in Lightroom color grading and composition."
},
{
icon: "fa-solid fa-laptop-code",
title: "Web Development",
desc: "HTML5, CSS3, and Modern Frameworks. Building fast, responsive sites for small businesses."
}
];

const clients = [
{ name: "Crosspointe Church", img: "/assets/img/crosspointe.png" },
{ name: "Lisa Evans", img: "/assets/img/lisaevans.png" },
{ name: "BDO", img: "/assets/img/bdologo.png" },
{ name: "RBS Rentals", img: "/assets/img/rbsrentals.png" }
];
---

<Layout title="About Chuck Copeland">

    <div class="about-page">

        <section class="bio-header container">
            <div class="bio-content">
                <h1>More Than Just <br /><span class="text-accent">Pixels</span></h1>
                <p class="lead">Cats, Clouds, Cars, and Code.</p>
                <div class="bio-text">
                    <p>I'm Chuck Copeland, a multimedia content specialist with over 20 years of freelance experience.
                        For 30 years, I led successful teams at companies like Walmart and Harbor Freight Tools. My
                        passion for storytelling led me to build a second career creating content for businesses and my
                        own niche communities.</p>
                    <p>I run several social media accounts focusing on everything from hurricane awareness to
                        motorsports. My greatest days are when I can help someone, make them smile, or tell a story that
                        matters.</p>
                </div>

                <div class="social-links">
                    <a href="https://www.linkedin.com/in/chuckcopeland" target="_blank" aria-label="LinkedIn"><i
                            class="fab fa-linkedin"></i></a>
                    <a href="https://www.instagram.com/chuck_copeland/" target="_blank" aria-label="Instagram"><i
                            class="fab fa-instagram"></i></a>
                    <a href="https://www.youtube.com/@chuckcopeland" target="_blank" aria-label="YouTube"><i
                            class="fab fa-youtube"></i></a>
                    <a href="https://x.com/chuckcopelandwx" target="_blank" aria-label="X"><i
                            class="fab fa-x-twitter"></i></a>
                </div>
            </div>

            <div class="bio-image">
                <img src="/assets/img/about-photo.webp" alt="Chuck Copeland" loading="lazy" />
            </div>
        </section>

        <section class="skills-section reveal">
            <div class="container">
                <h2>Technical Toolkit</h2>
                <div class="skills-grid">

                    <div class="skill-card">
                        <i class="fa-solid fa-film icon"></i>
                        <h3>Production Suite</h3>
                        <p class="text-muted">Davinci Resolve Studio, After Effects, and Fusion.
                            Running on a custom i9 Workstation.</p>
                    </div>

                    <div class="skill-card">
                        <i class="fa-solid fa-camera icon"></i>
                        <h3>Gear Locker</h3>
                        <p class="text-muted">Sony Cinema Line, DJI Drones (Part 107),
                            and professional location audio.</p>
                    </div>

                    <div class="skill-card">
                        <i class="fa-solid fa-laptop-code icon"></i>
                        <h3>Dev Stack</h3>
                        <p class="text-muted">Astro, Tailwind CSS, PHP, and VS Code.
                            Built for 100/100 Lighthouse scores.</p>
                    </div>

                </div>
            </div>
        </section>

        <section class="clients-section container reveal">
            <div class="section-header">
                <h2>Current and Past Clients</h2>
            </div>
            <div class="client-logos">
                {clients.map(client => (
                <div class="client-logo">
                    <img src={client.img} alt={client.name} loading="lazy" />
                </div>
                ))}
            </div>
        </section>

    </div>

</Layout>

<style>
    .about-page {
        padding-top: 8rem;
    }

    /* BIO SECTION */
    .bio-header {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
        align-items: center;
        margin-bottom: 8rem;
    }

    @media (min-width: 992px) {
        .bio-header {
            grid-template-columns: 1.2fr 0.8fr;
        }
    }

    .lead {
        font-size: 1.5rem;
        color: var(--text-muted);
        font-family: var(--font-heading);
        margin-bottom: 2rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .bio-text p {
        color: #ccc;
        margin-bottom: 1.5rem;
        max-width: 60ch;
    }

    .bio-image img {
        width: 100%;
        max-width: 500px;
        height: auto;
        border-radius: 12px;
        filter: grayscale(100%);
        transition: filter 0.5s ease;
        box-shadow: 20px 20px 0 var(--bg-card);
    }

    .bio-image:hover img {
        filter: grayscale(0%);
    }

    /* SOCIAL LINKS */
    .social-links {
        display: flex;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .social-links a {
        font-size: 1.5rem;
        color: var(--text-muted);
        transition: transform 0.2s ease, color 0.2s ease;
    }

    .social-links a:hover {
        color: var(--accent);
        transform: translateY(-3px) scale(1.5);
    }

    /* SKILLS */
    .skills-section {
        background: var(--bg-card);
        padding: 6rem 0;
        margin-bottom: 6rem;
    }

    .skills-section h2 {
        text-align: center;
        margin-bottom: 4rem;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
    }

    .skill-card {
        text-align: center;
        padding: 2rem;
    }

    .icon {
        font-size: 3rem;
        color: var(--accent);
        margin-bottom: 1.5rem;
    }

    /* CLIENTS */
    .clients-section {
        margin-bottom: 8rem;
    }

    .section-header {
        border-bottom: 1px solid #222;
        padding-bottom: 1rem;
        margin-bottom: 3rem;
    }

    .client-logos {
        display: flex;
        justify-content: space-around;
        align-items: center;
        flex-wrap: wrap;
        gap: 3rem;
    }

    .client-logo img {
        max-height: 100px;
        max-width: 200px;
        opacity: 0.5;
        filter: grayscale(100%);
        transition: all 0.3s ease;
    }

    .client-logo:hover img {
        opacity: 1;
        filter: grayscale(0%);
    }
</style>